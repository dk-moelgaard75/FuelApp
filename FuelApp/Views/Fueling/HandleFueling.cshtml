@model IEnumerable<FuelApp.Models.FuelingModel>

@{
    ViewData["Title"] = "HandleFueling";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>HandleFueling</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleGID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GasStation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FuelAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mileage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleGID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GasStation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FuelAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mileage)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.GID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.GID })
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <!--<a asp-area="" asp-controller="Vehicle" asp-action="HandleVehicle" class="navbar-brand">Edit vehicle</a><br />-->
    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Return to menu</a>
</div>

